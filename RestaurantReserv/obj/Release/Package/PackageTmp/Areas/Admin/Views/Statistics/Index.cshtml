@model IEnumerable<RestaurantReserv.Models.Statistic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataText)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Public/img/@Html.DisplayFor(modelItem => item.Image)" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataText)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            <a href="@Url.Action("delete", "statistics", new { id=item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
    </tr>
}

</table>
