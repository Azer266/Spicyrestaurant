@using RestaurantReserv.Models;

<!--=============== Hero Section ===============-->
<section class="hero hero-page bg-gray has-pattern">
    <div class="container text-center">
        <!-- Breadcrumb -->
        <ul class="breadcrumb d-flex justify-content-center">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")" class="animsition-link">Home</a></li>
            <li class="breadcrumb-item active">Dishes</li>
        </ul>

        <h1>Dishes</h1>
        <p class="hero-text col-lg-8 push-lg-2">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        <a href="@Url.Action("Index","Reservation")" class="btn-template has-shadow animsition-link">Make a Reservation</a>
    </div>
</section>
<!--=============== /. Hero Section ===============-->
<!--=============== Dishes Section ===============-->
<section class="dishes page-section">
    <div class="container">
        <div class="row">

            <!-- dish -->
            @foreach (Dish item in ViewBag.Dish)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="item text-center has-shadow rounded">
                        @if (item.DiscountPrice > 0)
                        {
                            <div class="ribbon">Sale</div>
                        }
                        <div class="image">
                            <img src="~/Public/img/@item.Image" alt="..." class="img-fluid d-block mx-auto">
                        </div>
                        <h3 class="heading-light">@item.Name  Name</h3>
                        <p>@item.Text</p>
                        <ul class="price list-inline">
                            @if (item.DiscountPrice == null)
                            {
                                <li class="list-inline-item current">$@item.Price</li>
                            }

                            @if (item.DiscountPrice > 0)
                            {
                                <li class="list-inline-item current">$@item.DiscountPrice</li>
                                <li class="list-inline-item original">$@item.Price</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation exampler">
        <ul class="pagination d-flex justify-content-center">
            @if (ViewBag.ActivePage != 1)
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("index","Dishes",new { page=(ViewBag.ActivePage-1)} )"><i class="fa fa-angle-left"></i></a></li>
            }
            @for (int i = 0; i < ViewBag.TotalPage; i++)
            {
                <li class="page-item"><a class="@((i+1)==ViewBag.ActivePage?"active":"") page-link" href="@Url.Action("index","Dishes",new { page=(i+1)} )">@(i + 1)</a></li>
            }
            @if (ViewBag.ActivePage != ViewBag.TotalPage)
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("index","Dishes",new { page=(ViewBag.ActivePage+1)} )"><i class="fa fa-angle-right"></i></a></li>
            }
        </ul>
    </nav>
</section>
<!--=============== /. Dishes Section ===============-->
